<div class="shop-search">
              	
                <div class="navigation__search{% if animate %} navigation__entrance-animation{% endif %}">
                  <form action="{{ routes.search_url }}" method="get" role="search">
                         <input type="hidden" name="type" value="product" />
                    <div class="input-group--underline">
                       <div class="input-group__btn">
                        <button type="submit" class="btn btn--clear btn--square"{% if disableTab %} tabindex="-1"{% endif %}>
                          {% include 'icon-search' %}
                          <span class="icon__fallback-text">{{ 'general.search.submit' | t }}</span>
                        </button>
                      </div>
                      <input class="input-group__field" type="search" name="q" value="{{ search.terms | escape }}" placeholder="" aria-label="{{ 'general.search.placeholder' | t }}"{% if disableTab %} tabindex="-1"{% endif %}>
                     
                    </div>
                  </form>
                </div>

              </div>
              
              <div class="shop-link-list">
              
                <ul>
                {% for link in linklists.sneakers.links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
                </ul>
              </div>